<script>
   $(document).ready(function() {
    $('select').material_select();
  });
</script>
<div class="row">
  <div class="col s6">
    <%= form_for [@company, @job] do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :level_of_interest %>
      <%= f.number_field :level_of_interest %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :category %>
      <%= f.select :category_id, @categories.map {|c| [c.title, c.id] } %>

      <%= f.submit 'Submit', class: "btn waves-effect waves-light" %>
    <% end %>
  </div>
</div>

