<nav>
  <div class="nav-wrapper">
    <div class="col s11">
      <%= link_to 'Home', root_path, class: "breadcrumb"%>
      <%= link_to "Categories", categories_path, class: "breadcrumb" %>
    </div>
  </div>
</nav>
<ul class="collection with-header">
  <li class="collection-header"><h3>All Categories</h3></li>
  <% @categories.each do |category| %>
    <li class="collection-item category_<%= category.id %>">
      <%= link_to category.title, category_path(category) %><br>
      <%= link_to '<i class="material-icons">mode_edit</i>'.html_safe, edit_category_path(category), class: "btn-floating btn-large waves-effect waves-light red" %>
      <%= link_to "<i class='material-icons'>delete</i>".html_safe, category_path(category), method: "delete", class: "btn-floating btn-large waves-effect waves-light red" %>
    </li>
  <% end %>
</ul>
<%= link_to '<i class="material-icons">add</i>'.html_safe, new_category_path, class: "btn-floating btn-large waves-effect waves-light red" %>
