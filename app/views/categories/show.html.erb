<nav>
  <div class="nav-wrapper">
    <div class="col s11">
      <%= link_to 'Home', root_path, class: "breadcrumb"%>
      <%= link_to "Categories", categories_path, class: "breadcrumb" %>
      <%= link_to @category.title, category_path(@category), class: "breadcrumb" %>
    </div>
  </div>
</nav>
<ul class="collection with-header">
  <li class="collection-header"><h4>All Jobs for <strong><%= @category.title %></strong></h4></li>
  <% @category.jobs.each do |job| %>
    <li class="collection-item job_<%= job.id %>">
      <%= link_to "#{job.title} at #{job.company.name}", company_job_path(job.company, job) %><br>
      <%= link_to '<i class="material-icons">mode_edit</i>'.html_safe, edit_company_job_path(job.company, job), class: "btn-floating btn-large waves-effect waves-light red" %>
      <%= link_to "<i class='material-icons'>delete</i>".html_safe, company_job_path(job.company, job), method: "delete", class: "btn-floating btn-large waves-effect waves-light red" %>
    </li>
  <% end %>
</ul>
