<nav>
  <div class="nav-wrapper">
    <div class="col s11">
      <%= link_to 'Home', root_path, class: "breadcrumb"%>
    </div>
  </div>
</nav>
<div class="row">
  <div class="col s6">
<ul class="collection with-header">
  <li class="collection-header"><h3>All Companies</h3></li>
  <% @companies.each do |company| %>
    <li class="collection-item company_<%= company.id %>">
      <%= link_to company.name, company_path(company) %><br>
      <%= link_to '<i class="material-icons">mode_edit</i>'.html_safe, edit_company_path(company), class: "btn-floating btn-large waves-effect waves-light red" %>
      <%= link_to "<i class='material-icons'>delete</i>".html_safe, company_path(company), method: "delete", class: "btn-floating btn-large waves-effect waves-light red" %>
    </li>
  <% end %>
</ul>
<%= link_to '<i class="material-icons">add</i>'.html_safe, new_company_path, class: "btn-floating btn-large waves-effect waves-light red" %>
